<script type="text/javascript">
$('#btnMessage').click(function(){



//socket.emit('msg',{message:$(this).val()});
//$(this).val('');

});

$(document).ready(function () {

var socket = io();  




$('#btnContactUsSubmit').on(('click'),function(){


var data={};
data.name=$('#txtName').val();
data.email=$('#txtEmail').val();
data.message=$('#txtMessage').val();
data.phone=$('#txtPhone').val();

//  alert((/^[\w\-\.\+]+\@[a-zA-Z0-9\.\-]+\.[a-zA-z0-9]{2,4}$/).test(data.email));
if (data.name == '' || (/^[A-Za-z]{3,}$/).test(data.name)==false){

showError('invalid name');

return false;

}

else if (data.message.length <10){

showError('invalid message');

return false;

}
else if ((/^[\w\-\.\+]+\@[a-zA-Z0-9\.\-]+\.[a-zA-z0-9]{2,4}$/).test(data.email)==false){

showError('invalid email');

return false;

}
///^[2-9]\d{2}-\d{3}-\d{4}$/

else if (data.phone !='' && (/^0[2-9]\d{2}-\d{3}-\d{4}$/).test(data.phone)==false){

showError('invalid phone number');

return false;

}
else
{

$.post('/contactus',data,function(res){

$('#divErrorMessage').html('Your message has been sent succesffully');

setTimeout(function(){

$('#contactUs').modal('hide');

},1000);

return true;
});


return false;

}
});

$('#contactUs').on(('click'),function(){
$('#divErrorMessage').html('');

});

$('#btnMessage').bind("click",function(){
            var m = $('.chat-msg').val();
            
             $('.chat-msg').val('');
             
             socket.emit('chat-msg',{message:m});
             
     });

    socket.on('ConnCount',function(count){
       
       $('#aconnections').html(count + ' live user(s) connected');
       
       
       
    });
    
    socket.on('chat-msg',function(msgjson){
       
      
      
      $('.chat-msgs ul').append('<li>'+ formatMessage(msgjson) +'</li>');
       
       
    });
    


});

function formatMessage(msgjson){
    
   return msgjson.messageTime == undefined || null ?'':msgjson.messageTime + ':' + msgjson.message;
    
    
}   
    
    
   

var showError = function(message) {
   
    var e='<span style="color:red">' + message + '</span>';
    $('#divErrorMessage').html(e);
       
    };
var loginPageRedirect=function(){
    
   window.location='http://www.mykathua.com/login/';
}

</script>