})
</div>

})

<script type="text/javascript">
    var efile=$('.img-file'),
    
        etext = $('.img-text');
        
        
     $(document).ready(function () {
         
    
         
        efile.parent().next().hide();
        etext.parent().next().hide();
   

});
$( ".btn-submit" ).click(function() {
    
  
  var retval=true;
  if (efile.val() =='')
  {
   
    efile.parent().next().show();
    retval=false;
    
  }
  else
  efile.parent().next().hide();
  
  if (etext.val()=='')
  {
   
    etext.parent().next().show();
    retval=false;
    
  }
  else
     etext.parent().next().hide();
  
  
  return retval;
  
});

</script>