@html.block("css",function(){
<link rel="stylesheet" href="/resources/css/local/home.css"/>
});
@html.block("js",function(){

 
});
<div class="container">

@html.block("main",function(model){
    @if (model.error){
        <p class="text-error"> error occured:@model.error</p>
        }
<form action='/gallery/upload/' method='POST' enctype="multipart/form-data" ref='uploadForm' id='uploadForm' >
<div class="row">
    
    <div class="col-md-3">Select image</div>
    <div class="col-md-5"><input type="file" name="file" class="img-file"/></div>
    <div class="col-md-1"><span style="color:red;font-size:1.2em;" class="span-error">*</span></div>
    
</div>
<div class="row">
    <div class="col-md-3">Comments</div>
    <div class="col-md-5">
        
        <input type="textarea" name="comments" rows="5" cols="10" class='img-text'  />
        
    </div>
    <div class="col-md-1"><span style="color:red;font-size:1.2em;" class="span-error">*</span></div>
    
    
</div>
